<!-- notes.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <title>Notes</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- Link to the separated CSS file -->
  <link rel="stylesheet" href="/styles/myStyles.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/notes.js"></script>
</head>

<body>
  <header class="page-header">
    <!-- Display user's name in the top right corner -->
    <div class="user-info">
      Welcome,&nbsp;&nbsp;&nbsp;<%= user.email %> <!-- Display user's name here -->
      <form action="/sessions/logout" method="post">
        <input class="logout-btn" type="submit" value="logout"/>
      </form>
    </div>

    <!-- Logout -->

  </header>

  <main>
    <div class="card-body">
      <div class="add-note">
        Would you like to add a new note?
      </div>

      <form id="new-note" action="/notes/" method="POST">
        <input class="note-textfield"  type="text" name="text" placeholder="Enter your note" required>
        <br>
        <button class="note-btn" type="submit" class="large">Save</button>
      </form>

      <hr>

      <!-- Notes container -->
      <div id="notes-container" data-user-id="<%= user.id %>"></div>
    </div>
  </main>
</body>
</html>
