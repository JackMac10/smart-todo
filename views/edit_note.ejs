<!-- EDIT NOTE -->

<!DOCTYPE html>
<html lang="en">

<head>
  <title>Notes</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <!-- <link rel="stylesheet" href="/vendor/border-box.css" /> -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- Link to the separated CSS file -->
  <link rel="stylesheet" href="/styles/myStyles.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/edit_note.js"></script>
</head>

<body>
  <header class="page-header">
    <h1>Edit</h1>
  </header>

  <form class="edit-form">
    <label class="edit-note" for="notes"><strong>Content: </strong></label>
    <input
      class="form-control"
      type="text"
      name="content"
      value="<%= note.content %>"
      style="width: 300px; margin: 1em"
    />
    <br>
    <div class="category-dropdown">
      <label for="categories-select">Choose a Category:</label>
      <select id="categories-select" name="category_id" data-current-category-id="<%= note.category_id %>"></select>
    </div>

    <hr>

    <div class="edit-page-btns">
      <button class="cancel-btn">Cancel Changes</button>
      <button data-note-id="<%= note.id %>" class="edit-submit-btn" type="submit">Save Changes</button>
    </div>
  </form>
  <button data-note-id="<%= note.id %>" class="delete-btn">Delete Note</button>
  <button class="back-btn">Back</button>
</body>
</html>
